<!doctype html>

<html>
	<head>
		<meta charset="UTF-8">
    	<title>积分管理</title>
    	<link href="${webroot}/resources/system/css/demand.css" rel="stylesheet" type="text/css" />
			<script type="text/javascript" src="${webroot}/resources/commons/js/jquery-1.8.3.min.js"></script>
			<script type="text/javascript" src="${webroot}/resources/system/js/tools.js"></script>
			<script type="text/javascript" src="${webroot}/resources/system/js/list.js"></script>
			<script type="text/javascript" src="${webroot}/resources/plugin/datePicker/WdatePicker.js"></script>
			<script type="text/javascript" src="${webroot}/resources/system/js/user/viratualLog/userViratualLogList.js"></script>
    </head>
    <body>
    	<form action="${webroot}/system/user/amountLog/amountLogList" method="post"  id="searchIntegralLogForm">
    		<input type="hidden"  name="jugg" value="${jugg}"/>
			<dl class="pro_ss">
				<dt><b>查询</b><span class="span_down"></span><span class="span_up"></span></dt>
				<dd class="pro_ss_item">
					<span>状态</span>
					<span class="zt"><label><input type="radio" value="" name="status" #if(status == null  || status == "") checked=true #end/>所有</label></span>
					<span class="zt"><label><input type="radio" value="1" name="status" #if("1".equals(status)) checked=true #end/>增加</label></span>
					<span class="zt"><label><input type="radio" value="0" name="status" #if("0".equals(status)) checked=true #end/>减少</label></span>
				</dd>
				<div class="clear"></div>
				<dd class="pro_ss_item">
					<span>用户名</span>
					<input type="text" class="i_bg" name="name" value="${name}"/>
				</dd>
				
				<input type="hidden" name="pageNum" value="" />
			</dl>
			</form>
			<div class="pro_ss_btn">
				<a href="#" onclick="searchSubmit();" class="btn">搜索</a>
				<a href="#" onclick="resetForm();" class="btn">重置</a>
			</div>
			
			<!--
				<div class="pro_ss_btn">
					<a href="#" onclick="userIntegralAdd('${webroot}');" class="btn">新增</a>
				</div>
			-->
		
			
			#define(List<com.ekfans.base.user.model.ViratualLog> viratualLogs)
			<!--没有数据的时候-->
			#if(viratualLogs==null||viratualLogs.size()<=0)
				<div class="ht_list_k">暂时没有符合条件的数据</div>	
			#else
			
			<!--有数据的时候-->
				<div class="ht_list">
					<table id="userTab" cellpadding="0" cellspacing="0" border="0" >
						<tr>
							　 <th width="5%">全选</th>
							　  <th width="5%">序号</th>
		              <th width="12%">用户名</th>
		              <th width="10%">金币数</th>
		              <th width="8%">类型</th>
		              <th width="10%">操作者</th>
		              <th width="13%">创建时间</th>
		              <th colspan="10%">备注</th>
						</tr>
						#for(com.ekfans.base.user.model.ViratualLog viratualLog : viratualLogs)
							<tr>
							<td class="qx"><input type="checkbox" value="${viratualLog.id }"/></td>
						    <td>${viratualLog.orderId}</td>
						   
			          		<td>${viratualLog.userId }</td> <!--替代显示 -->
		                <td>${viratualLog.amount }</td>
		                <td>#if("1".equals(viratualLog.type)) 增加　#else 减少　#end</td>
		               
		                <td>${viratualLog.operator}</td>
										<td>${viratualLog.createTime }</td>
										<td>${viratualLog.note }</td>
									<td class="cz">
							    	<!-- <a href="#" onclick="queryId('${viratualLog.id}','${webroot}');">详细</a>
								    	<img src="${webroot}/resources/system/images/xg3.jpg" onclick="updateIntegral('${viratualLog.id}','${webroot}');" />
								    	<img src="${webroot}/resources/system/images/del2.jpg" id="del${viratualLog.id}"
								    	 onclick="econfirm('确定要删除此记录吗？',userIntegralDelete,['${viratualLog.id}','${webroot}'],null,null);" />
							    	 -->
							    </td>
						   </tr>
						 #end
					</table>
					<div class="ht_pageBox">
					<div class="ht_page_l">
					<!--
						<a href="#" onclick="selectAll();" class="btn">全选</a>
						 -->
						<!-- 为删除前验证服务的隐藏域 -->
					<!-- 
						<input type="hidden" id="ctxpath" value="${webroot}" /> 
						<a href="#" onclick="checkSelect();" class="btn">删除</a>
					 -->
					</div>
					<!-- 分页 -->
					#define(com.ekfans.pub.util.Pager pager)
					<div class="ht_page">
							<a href="#" onclick="goPage('1');"   value="1" class="btn"><<</a>
							#if(pager.currentPage == 1)
								<a href="#" class="btn"><</a> 
							#else
								<a href="#" onclick="goPage('${pager.currentPage-1 }');"   value="${pager.currentPage-1 }" class="btn"><</a>
							#end
							
							#if(pager.totalPage>5)
								#if(pager.currentPage-2>1 && pager.currentPage+2<pager.totalPage)
									<a class="btn">..</a>
									#for(int i : iterator(pager.currentPage-2,pager.currentPage+2))
										#if(pager.currentPage==i)
												<a href="#" onclick="goPage('${i }');" value="${i }" class="btn cur">${i }</a>
										#else
											<a href="#" onclick="goPage('${i }');" value="${i }" class="btn">${i }</a>
										#end
									#end
									<a>..</a>
								#elseif(pager.currentPage-2<=1)
									#for(int i : iterator(1,5))
										#if(pager.currentPage==i)
											<a href="#" onclick="goPage('${i }');"   value="${i }" class="btn cur" >${i }</a>
										#else
											<a href="#" onclick="goPage('${i }');"   value="${i }" class="btn">${i }</a>
										#end
									#end
									<a>..</a>
								#else
									<a>..</a>
									#for(int i : iterator(pager.totalPage-4,pager.totalPage))
										#if(pager.currentPage==i)
											<a href="#" onclick="goPage('${i }');"   value="${i }" class="btn cur" >${i }</a>
										#else
											<a href="#" onclick="goPage('${i }');"   value="${i }" class="btn">${i }</a>
										#end
									#end
								#end
							#else
								#for(int i : iterator(1,pager.totalPage))
									#if(pager.currentPage==i)
										<a href="#" onclick="goPage('${i }');"   value="${i }" class="btn cur" >${i }</a>
									#else
										<a href="#" onclick="goPage('${i }');"   value="${i }" class="btn">${i }</a>
									#end
								#end
							#end
							
							#if(pager.currentPage==pager.totalPage)
								<a href="#" class="btn">></a>
							#else
								<a href="#" onclick="goPage('${pager.currentPage+1 }');"   value="${pager.currentPage+1 }" class="btn">></a>
							#end
							<a  href="#" onclick="goPage('${pager.totalPage }');"   value="${pager.totalPage }" class="btn">>></a>
							
						</div>
					</div>
				</div>
		#end
	</body>
</html>
	
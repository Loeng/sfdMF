<?xml version="1.0" encoding="UTF-8"?>
<Document>
	<div class="tit" ID="tit">
		<em class="apNum" ID="adName">${typeName}</em>
		<span class="apClose" onclick="eyeClose();">
			<img src="${fullPath}/resources/system/images/del3.jpg" />
		</span>
	</div>

	<!--横排广告-->
	<div class="apPreview hengAp" ID="hengpai">
		<div class="previewContent">
			<div class="hengAdv" style="width:${width}px; height:${height}px;" ID="CONTENTS">
				<ul>
					<li ID="details">
						<a href="${linkUrl}">
							<img src="${adImg}" />
						</a>
						<a href="${linkUrl}">
							<span class="advText">${adContent}</span>
						</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
	<!--横排广告 end-->


	<!--竖排广告-->
	<div class="apPreview shuAp" ID="shupai">
		<div class="previewContent">
			<ul class="shuAdv" style="width:${width}px; height:${height}px;" ID="CONTENTS">
				<li ID="details">
					<a href="${linkUrl}">
						<img src="${adImg}" />
					</a>
					<a href="${linkUrl}">
						<span class="advText">${adContent}</span>
					</a>
				</li>
			</ul>
		</div>
	</div>
	<!--竖排广告 end-->


	<!--单图广告，针对只有一张图片（可以带链接）的广告-->
	<div class="apPreview danAp" ID="dantu">
	    <div class="danAdv" style="width:${width}px; height:${height}px;" ID="CONTENTS">
	        <div ID="details">
	            <a href="${linkUrl}" title="${adContent}" class="danLink">
	                <img src="${adImg}" style="width:${width}px; height:${height}px; display:block;"  id="IMGS"/>
	            </a>
	        </div>
	    </div>
	</div>
	<!--单图广告 end-->


	
	
	<!--纯结构广告，高自由度广告类型，能够兼容各种图文混排，图片，标题，文字内容都是非必填项，便于管理员任意搭配-->
	<div class ="autoAdv" ID="chun">
	    <div style="width:${width}px; height:${height}px;" ID="CONTENTS">
	        <div ID="details">
	            <div class="autoAdvImg"><img src="${adImg}"></img></div><!--广告图片，非必填-->
	            <div class="autoAdvText">
	                <em>${adName}</em><!--广告标题，非必填-->
	                <div class="autoAdvContent">${adContent}</div><!--广告内容，非必填-->
	            </div>
	        </div>
	    </div>
	</div>
	<!--纯结构广告 end-->




	
	
	<!--图文切换1-->
	<div class="slideBox"  ID="tuwen1">
		<div ID="CONTENTS">
	        <div class="hd">
	            <ul><li ID="details2">${forIndex}</li></ul>
	        </div>
	        <div class="bd">
	            <ul>
	                <li ID="details"><a href="${linkUrl}" ><img src="${adImg}" style="width:${width}px; height:${height}px;"  id="IMGS"/></a></li>
	            </ul>
	        </div>
	    </div>
	</div>
	<!--图文切换1 end-->



	<!--数字切换-->
	<div class="slideBox" ID="shuzi">
		<div ID="CONTENTS">
	        <div class="hd">
	            <ul><li ID="details2">${forIndex}</li></ul>
	        </div>
	        <div class="bd">
	            <ul>
	                <li ID="details"><a href="${linkUrl}"><img src="${adImg}" style="width:${width}px; height:${height}px;"  id="IMGS"/></a></li>
	            </ul>
	        </div>
	    </div>
	</div>
	<!--数字切换 end-->


	
	<!--大小图切换-->
	<div class="slideBox"  ID="daxiao">
		<div ID="CONTENTS">
	        <div class="hd">
	            <ul><li ID="details2"><img src="${adImg}" /></li></ul>
	        </div>
	        <div class="bd">
	            <ul>
	                <li ID="details"><a href="${linkUrl}"><img src="${adImg}" style="width:${width}px; height:${height}px;"  id="IMGS"/></a></li>
	            </ul>
	        </div>
	    </div>
	</div>
	<!--大小图切换 end-->



	<!--自定义-->
	<div class="apPreview changeAp" ID="zidingyi">
		<div class="previewContent" style="width:${width}px; height:${height}px;" ID="CONTENTS">
			<div class="areaContent" ID="details">${adContent}</div>
		</div>
	</div>
	<!--自定义 end-->

	<!--文字-->
	<div class="apPreview changeAp" ID="wenzi">
		<div class="previewContent">
			<span ID="CONTENTS" style="width:${width}px; height:${height}px;">
				<span ID="details" style="color:${contentColor}" class="wordcss">${adContent}</span>
			</span>
		</div>
	</div>
	<!--文字 end-->
	
	
	<!--圆点切换-->
	<div class="slideBox" ID="circlePoint">
		<div ID="CONTENTS">
	        <div class="hd" ID="CONTENTS">
	            <ul><li ID="details2"></li></ul>
	        </div>
	        <div class="bd">
	            <ul>
	                <li ID="details"><a href="${linkUrl}"><img src="${adImg}" style="width:${width}px; height:${height}px;" id="IMGS"/></a></li>
	            </ul>
	        </div>
	    </div>
	</div>
	<!--圆点切换 end-->
    

</Document>